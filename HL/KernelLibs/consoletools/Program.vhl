
private const uint C_IAV = 0xFFFF1012;
private const uint C_WD = 0xFFFF1022;
private const uint C_HT = 0xFFFF1023;
private const uint C_CL = 0xFFFF1024;
private const uint C_CT = 0xFFFF1025;
private const uint C_BC = 0xFFFF1026;
private const uint C_FC = 0xFFFF1027;
private const uint C_RC = 0xFFFF1028;
private const uint C_BWD = 0xFFFF1029;
private const uint C_BHT = 0xFFFF102A;


public static uint color_black() { return 0; }
public static uint color_dark_blue() { return 1; }
public static uint color_dark_green() { return 2; }
public static uint color_dark_cyan() { return 3; }
public static uint color_dark_red() { return 4; }
public static uint color_dark_magenta() { return 5; }
public static uint color_dark_yellow() { return 6; }
public static uint color_gray() { return 7; }
public static uint color_dark_gray() { return 8; }
