public static uint color_green() { return 10; }
public static uint color_cyan() { return 11; }
public static uint color_red() { return 12; }
public static uint color_magenta() { return 13; }
public static uint color_yellow() { return 14; }
public static uint color_white() { return 15; }


public static void ct_set_cursor_left(uint l)
{
	C_CL = l;
}

public static void ct_set_cursor_top(uint t)
{
	C_CT = t;
}

public static uint ct_get_cursor_left(uint l)
{
	uint v = C_CL;
	return v;
}

public static uint ct_get_cursor_top(uint t)
{
	uint v = C_CT;
	return v;
}

public static void ct_set_wwidth(uint w)
{
	C_WD = w;
}

public static void ct_set_wheight(uint h)
{
	C_HT = h;
}


public static uint ct_get_wwidth()
{
	uint v = C_WD;
	return v;
}

public static uint ct_get_wheight()
{
	uint v = C_HT;
	return v;
}

public static void ct_set_bwidth(uint w)
{
	C_BWD = w;
}

public static void ct_set_bheight(uint h)
{
	C_BHT = h;
}


public static uint ct_get_bwidth()
{
	uint v = C_BWD;
	return v;
}

public static uint ct_get_bheight()
{
	uint v = C_BHT;
	return v;
}

public static void ct_set_fore_color(uint c)
{
	C_FC = c;
}

public static void ct_set_back_color(uint c)
{
	C_BC = c;
}

public static void ct_reset_colors()
{
	C_RC = 1;
}

public static uint ct_is_input_available()
{
	uint v = C_IAV;
	return v;
}