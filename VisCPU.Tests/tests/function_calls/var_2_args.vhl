#include "../utils.vhl"

string(str_test_name, "VarNoArgsTest");
string(str_ret_val_fail, "Return value is not 5");

private void TestC(var arg1, var arg2)
{
	return arg1 + arg2;
}

private void TestV(var arg1, var arg2)
{
	var b = arg1;
	var c = arg2;
	return b + c;
}

private void VarV2ArgsTest()
{
	BeginTest(ptr_of(str_test_name), size_of(str_test_name));
	var ar = 3;
	var br = 2;
	var a = TestC(ar,br);
	if(a == 5)
	{
		var c = TestV(ar,br);
		if(c == 5)
		{
			PassTest();
			return;
		}
	}
	FailTest(ptr_of(str_ret_val_fail), size_of(str_ret_val_fail));
	return;
}

private void VarC2ArgsTest()
{
	BeginTest(ptr_of(str_test_name), size_of(str_test_name));
	var a = TestC(2, 3);
	if(a == 5)
	{
		var c = TestV(2, 3);
		if(c == 5)
		{
			PassTest();
			return;
		}
	}
	FailTest(ptr_of(str_ret_val_fail), size_of(str_ret_val_fail));
	return;
}